<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- <item name="android:windowActionBarOverlay">true</item> -->
        <!-- <item name="android:windowContentOverlay">@null</item> -->
        <item name="actionModeShareDrawable">@drawable/ic_action_share</item>
    </style>

    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyCompatActionBar</item>
        <item name="android:actionBarTabStyle">@style/WhiteTabIndicator</item>
        <item name="actionModeShareDrawable">@drawable/ic_action_share</item>
    </style>

    <!-- Base application theme. -->
    <style name="TransparentAppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionModeShareDrawable">@drawable/ic_action_share</item>
    </style>

    <style name="TransparentAppCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TransparentCompatActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- <item name="android:background">#414549</item> -->
        <!-- <item name="android:background">#00000000</item> -->
        <!-- <item name="android:background">@drawable/transparent_black_to_transparent_gradient</item> -->
        <!-- <item name="android:windowActionBarOverlay">true</item> -->
        <item name="android:background">@color/gb_grey</item>
        <item name="android:backgroundStacked">@color/gb_grey</item>
    </style>

    <style name="MyCompatActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/gb_grey</item>
        <item name="android:backgroundStacked">@color/gb_grey</item>
    </style>

    <style name="TransparentActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/transparent_black_to_transparent_gradient</item>
    </style>

    <style name="TransparentCompatActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/transparent_black_to_transparent_gradient</item>
    </style>

    <style name="WhiteTabIndicator" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- <item name="android:background">@color/gb_grey</item> -->
        <item name="android:background">@drawable/tab_indicator</item>
    </style>
    
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">#DFE0E2</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">3px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#DFE0E2</item>
    </style>

    <style name="vertical_padded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

</resources>
